{
  "name": "mithril-portal",
  "version": "1.2.1",
  "description": "Mithril component for rendering children outside the DOM hierarchy of the parent component.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run test && npm run lint && npm run build:cjs &&  npm run build:esm",
    "watch": "tsc --w",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "version": "npm run build && git add *",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasilrimar/mithril-portal.git"
  },
  "keywords": [
    "mithril",
    "portal"
  ],
  "author": "Vasil Rimar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasilrimar/mithril-portal/issues"
  },
  "homepage": "https://github.com/vasilrimar/mithril-portal#readme",
  "devDependencies": {
    "@types/mithril": "^1.1.16",
    "@types/mocha": "^5.2.7",
    "assert": "^2.0.0",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "mithril": "^1.1.6",
    "mocha": "^6.1.4",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  }
